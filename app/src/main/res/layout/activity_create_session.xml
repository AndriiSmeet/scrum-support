<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#cfd8dc"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="130dp"
            android:layout_height="75dp"
            android:background="@color/bgColorBtn"
            android:orientation="vertical">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/synchronization" />


            <TextView
                android:id="@+id/textSessionStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:text="Status"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="15dp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="75dp"
            android:orientation="vertical"
            android:layout_centerHorizontal="true">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Select a number"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="130dp"
            android:layout_height="75dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@color/bgColorBtn"
            android:orientation="vertical">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/student"  />


            <TextView
                android:id="@+id/textStats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0"
                android:textSize="30dp" />


        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_below="@id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">


        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="80dp">

            <Button
                android:id="@+id/num1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/circle"
                android:textColor="#ffffff"
                android:text="1"
                android:textSize="40dp"
                />

            <Button
                android:id="@+id/num2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/circle"
                android:textColor="#ffffff"
                android:text="2"
                android:textSize="40dp"
                />

            <Button
                android:id="@+id/num3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/circle"
                android:textColor="#ffffff"
                android:text="3"
                android:textSize="40dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="80dp">

            <Button
                android:id="@+id/num5"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/circle"
                android:textColor="#ffffff"
                android:text="5"
                android:textSize="40dp"
                />

            <Button
                android:id="@+id/num8"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/circle"
                android:textColor="#ffffff"
                android:text="8"
                android:textSize="40dp"
                />

            <Button
                android:id="@+id/num12"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/circle"
                android:textColor="#ffffff"
                android:text="13"
                android:textSize="40dp"
                />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/footer"
        android:layout_centerHorizontal="true"
        android:background="@color/bgColorBtn"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="3dp"
            android:background="@drawable/stats" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:text="Statistics"
            android:textColor="@android:color/white"
            android:textSize="25dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/bgColorBtn"
        android:orientation="horizontal"
        android:weightSum="2">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_gravity="center"
                    android:textSize="17dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Value"/>

                <TextView
                    android:id="@+id/txtNum1"
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    android:text="num1"
                    android:textSize="15dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textSize="15dp"
                    android:id="@+id/txtNum2"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:text="num1"
                    android:layout_height="wrap_content" />


                <TextView
                    android:id="@+id/txtNum3"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:text="num1"
                    android:textSize="15dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txtNum5"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:text="num1"
                    android:textSize="15dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txtNum8"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:text="num1"
                    android:textSize="15dp"
                    android:layout_height="wrap_content" />

                <TextView

                    android:id="@+id/txtNum13"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:text="num1"
                    android:textSize="15dp"
                    android:layout_height="wrap_content" />


            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/white">

            </View>

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:text="Count" />

                <TextView
                    android:id="@+id/txtCount1"
                    android:visibility="gone"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:text="num1"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txtCount2"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:text="num1"
                    android:textSize="15dp"
                    android:layout_height="wrap_content" />


                <TextView
                    android:id="@+id/txtCount3"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:text="num1"
                    android:textSize="15dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txtCount5"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:text="num1"
                    android:textSize="15dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txtCount8"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:text="num1"
                    android:textSize="15dp"
                    android:layout_height="wrap_content" />

                <TextView

                    android:id="@+id/txtCount13"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:text="num1"
                    android:textSize="15dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>


        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/white">

        </View>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Average"
                android:textSize="25dp"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/avarage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="0"
                android:textSize="80dp"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>


