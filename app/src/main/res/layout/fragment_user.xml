<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#cfd8dc"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/toolbarHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp">

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>


    <LinearLayout
        android:id="@+id/header"
        android:layout_below="@+id/toolbarHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="130dp"
            android:layout_height="75dp"
            android:background="@color/bgColorBtn"
            android:orientation="vertical">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/synchronization" />


            <TextView
                android:id="@+id/textSessionStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:text="Status"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="15dp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="75dp"
            android:orientation="vertical"
            android:layout_centerHorizontal="true">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Select a number"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="130dp"
            android:layout_height="75dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@color/bgColorBtn"
            android:orientation="vertical">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/student"  />


            <TextView
                android:id="@+id/textStats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0"
                android:textSize="30dp" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">


        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="80dp">

            <Button
                android:id="@+id/num1"
                android:layout_width="76dp"
                android:layout_height="80dp"
                android:background="@drawable/button_onclick_user"
                android:text="1"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="40dp" />

            <Button
                android:id="@+id/num2"
                android:layout_width="76dp"
                android:layout_height="80dp"
                android:background="@drawable/button_onclick_user"
                android:text="2"
                android:textStyle="bold"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:textColor="@android:color/black"
                android:textSize="40dp" />


            <Button
                android:textStyle="bold"
                android:id="@+id/num3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/button_onclick_user"
                android:textColor="#000000"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:text="3"
                android:textSize="40dp"
                />

            <Button
                android:id="@+id/num5"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/button_onclick_user"
                android:textColor="#000000"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:text="5"
                android:textStyle="bold"
                android:textSize="40dp"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="80dp">

            <Button
                android:id="@+id/num8"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/button_onclick_user"
                android:textColor="#000000"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:text="8"
                android:textStyle="bold"
                android:textSize="40dp"
                />

            <Button
                android:id="@+id/num13"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/button_onclick_user"
                android:textColor="#000000"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:text="13"
                android:textStyle="bold"
                android:textSize="40dp"
                />

            <Button
                android:id="@+id/num21"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/button_onclick_user"
                android:textColor="#000000"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:text="21"
                android:textStyle="bold"
                android:textSize="40dp"
                />

            <Button
                android:id="@+id/num34"
                android:layout_width="80dp"
                android:textStyle="bold"
                android:layout_height="80dp"
                android:background="@drawable/button_onclick_user"
                android:textColor="#000000"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:text="34"
                android:textSize="40dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="80dp">

            <Button
                android:id="@+id/num55"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/button_onclick_user"
                android:textColor="#000000"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:text="55"
                android:textSize="40dp"
                android:textStyle="bold"
                />

            <Button
                android:id="@+id/num84"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/button_onclick_user"
                android:textColor="#000000"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:text="84"
                android:textSize="40dp"
                android:textStyle="bold"
                />

            <Button
                android:id="@+id/num139"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/button_onclick_user"
                android:textColor="#000000"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:text="139"
                android:textSize="40dp"
                android:textStyle="bold"
                />

            <Button
                android:textStyle="bold"
                android:id="@+id/num223"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/button_onclick_user"
                android:textColor="#000000"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:text="223"
                android:textSize="40dp"
                />


        </LinearLayout>

    </LinearLayout>


    <Button
        android:layout_marginTop="10dp"
        android:layout_below="@+id/header"
        android:layout_centerHorizontal="true"
        android:id="@+id/btnSelectStory"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:background="@color/bgColorBtn"
        android:textColor="@android:color/white"
        android:text="Select story"
        />



</RelativeLayout>


