<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.smeet.scrum_support.fragment.MasterMainFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#cfd8dc"
        tools:context="com.example.smeet.scrum_support.activity.ScrumMasterActivity">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_marginTop="10dp"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:background="@color/bgColorBtn"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src = "@drawable/document"/>

                    <TextView
                        android:id="@+id/txtStoryTitle"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@android:color/white"
                        android:text="No story" />

                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:id="@+id/linearLayout2"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:background="@color/bgColorBtn"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/collaboration" />


                    <TextView
                        android:id="@+id/textStats"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="0"
                        android:textColor="@android:color/white"
                        android:textSize="30dp" />


                </LinearLayout>

            </RelativeLayout>


            <LinearLayout
                android:id="@+id/buttons"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/header"
                android:layout_marginTop="1dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <Button
                        android:paddingLeft="5dp"
                        android:drawableLeft = "@drawable/save"
                        android:id="@+id/btnSaveStory"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:textStyle="bold"
                        android:background="@drawable/button_master"
                        android:text="Save"
                        android:fontFamily="@font/roboto_bold"


                        android:textColor="@android:color/white"
                        android:textSize="17dp">

                    </Button>

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/white">

                </View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">


                    <Button
                        android:paddingRight="5dp"
                        android:id="@+id/btnCreateStory"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:textStyle="bold"
                        android:drawableRight="@drawable/file"
                        android:background="@drawable/button_master"
                        android:text="Create"
                        android:fontFamily="@font/fonts"
                        android:textColor="@android:color/white"
                        android:textSize="17dp" />

                </LinearLayout>



            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/buttons"
                android:layout_marginTop="1dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btnSelectStory"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:fontFamily="@font/fonts"
                        android:textStyle="bold"
                        android:background="@drawable/button_master"
                        android:drawableLeft="@drawable/selection"
                        android:text="Select story"
                        android:textColor="@android:color/white" />


                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/white">

                </View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">


                    <Button
                        android:id="@+id/btnRefresh"
                        android:drawableRight="@drawable/reload"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:paddingLeft="5dp"
                        android:textStyle="bold"
                        android:background="@drawable/button_master"
                        android:textColor="@android:color/white"
                        android:text="Refresh"
                        android:fontFamily="@font/fonts"
                        />

                </LinearLayout>



            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/buttons">





            </RelativeLayout>



            <LinearLayout

                android:layout_width="100dp"
                android:layout_height="75dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/boss" />

            </LinearLayout>

            <LinearLayout
                android:layout_above="@+id/stat"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/fonts"
                    android:paddingRight="5dp"
                    android:textStyle="bold"
                    android:text="Statistics"/>

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/stats"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/stat"
                android:layout_width="match_parent"
                android:background="@color/bgColorBtn"
                android:layout_height="250dp"
                android:layout_alignParentBottom="true">

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/barchart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </com.github.mikephil.charting.charts.BarChart>


            </LinearLayout>


        </RelativeLayout>


    </LinearLayout>


</FrameLayout>
